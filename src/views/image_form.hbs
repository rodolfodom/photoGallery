<div class="row">
    <div class="col-md-4">
        <div class="card">
            <div class="card-body">
                <form action="/images/add" method="POST" enctype="multipart/form-data">
                    <div class="form-group">
                            <input type="text" name="title" class="form-control mb-2" placeholder="Image title">
                    </div>
                    <div class="form-group mb-2">
                        <textarea name="description" class="form-control" cols="30" rows="10" placeholder="Image description"></textarea>
                    </div>
                    <div class="input-group mb-2">
                        <div class="custom-file">
                            <input type="file" name="image" class="form-control" id="inputGroupFile04">
                        </div>
                    </div>
                    <button class="btn btn-primary">
                        Upload Photo
                    </button>
                </form>
            </div>
        </div>
    </div>
    <div class="col-md-8">
        <table class="table">
            <thead>
                <tr>
                    <th>Title</th>
                    <th>Description</th>
                    <th>Operations</th>
                </tr>
            </thead>
            <tbody>
                {{#each photos}}
                    <tr>
                        <td>{{title}}</td>
                        <td>{{description}}</td>
                        <td>
                            <a href="{{ imageURL }}" class="btn btn-primary">View</a>
                            <a href="/images/delete/{{ _id }}" class="btn btn-danger">Delete</a>
                        </td>
                    </tr>
                {{/each}}
            </tbody>
        </table>
    </div>
</div>


